@* =============================================================
   Fichier : Library.Web/App.razor
   Rôle    : Composant racine de l'application Blazor.
             Configure le routeur et les pages d'erreur.
   ============================================================= *@

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(Shared.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Page introuvable — Library</PageTitle>
        <LayoutView Layout="@typeof(Shared.MainLayout)">
            <div class="container mt-5 text-center">
                <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                <h1 class="mt-3">Page introuvable</h1>
                <p class="text-muted">La page que vous cherchez n'existe pas.</p>
                <a href="/" class="btn btn-primary">
                    <i class="bi bi-house me-2"></i>Retour à l'accueil
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
