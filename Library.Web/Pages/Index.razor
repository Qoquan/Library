@* =============================================================
   Fichier : Library.Web/Pages/Index.razor
   Rôle    : Page d'accueil de l'application.
             Affiche un résumé de la bibliothèque et les actions rapides.
   ============================================================= *@

@page "/"
@inject BookApiService BookService

<PageTitle>Accueil — Library</PageTitle>

<div class="row align-items-center mb-5">
    <div class="col-md-8">
        <h1 class="display-5 fw-bold">
            <i class="bi bi-book-half text-primary me-3"></i>Ma Bibliothèque
        </h1>
        <p class="lead text-muted">
            Gérez votre collection de livres, recherchez dans votre catalogue
            et importez des livres depuis OpenLibrary.
        </p>
        <a href="/books" class="btn btn-primary btn-lg me-2">
            <i class="bi bi-journal-text me-2"></i>Voir tous les livres
        </a>
        <a href="/books/add" class="btn btn-outline-primary btn-lg">
            <i class="bi bi-plus-circle me-2"></i>Ajouter un livre
        </a>
    </div>
    <div class="col-md-4 text-center d-none d-md-block">
        <i class="bi bi-bookshelf text-primary" style="font-size: 8rem; opacity: 0.3;"></i>
    </div>
</div>

<!-- Statistiques -->
@if (isLoading)
{
    <div class="text-center py-4">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-2 text-muted">Chargement des statistiques...</p>
    </div>
}
else
{
    <div class="row g-3 mb-5">
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-collection text-primary" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 fw-bold">@totalBooks</h2>
                    <p class="text-muted mb-0">Livres au total</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-check-circle text-success" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 fw-bold text-success">@availableBooks</h2>
                    <p class="text-muted mb-0">Disponibles</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center border-0 shadow-sm h-100">
                <div class="card-body">
                    <i class="bi bi-x-circle text-danger" style="font-size: 2.5rem;"></i>
                    <h2 class="mt-2 fw-bold text-danger">@borrowedBooks</h2>
                    <p class="text-muted mb-0">Empruntés</p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Actions rapides -->
<div class="row g-3">
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-database me-2 text-primary"></i>Gestion Locale
                </h5>
                <p class="card-text text-muted">
                    Ajoutez, modifiez et supprimez des livres de votre catalogue local.
                    Les données sont stockées dans une base SQLite.
                </p>
                <a href="/books" class="btn btn-primary">Gérer mes livres</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">
                    <i class="bi bi-cloud-search me-2 text-info"></i>OpenLibrary
                </h5>
                <p class="card-text text-muted">
                    Recherchez des millions de livres via l'API OpenLibrary
                    et importez-les directement dans votre bibliothèque.
                </p>
                <a href="/search-external" class="btn btn-info text-white">Rechercher en ligne</a>
            </div>
        </div>
    </div>
</div>

@code {
    // -------------------------------------------------------
    // Variables de l'interface
    // -------------------------------------------------------
    private bool isLoading = true;
    private int totalBooks = 0;
    private int availableBooks = 0;
    private int borrowedBooks = 0;

    // -------------------------------------------------------
    // Chargement des statistiques au démarrage
    // -------------------------------------------------------
    protected override async Task OnInitializedAsync()
    {
        var books = await BookService.GetAllBooksAsync();
        totalBooks = books.Count;
        availableBooks = books.Count(b => b.IsAvailable);
        borrowedBooks = books.Count(b => !b.IsAvailable);
        isLoading = false;
    }
}
