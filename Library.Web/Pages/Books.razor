@* =============================================================
   Fichier : Library.Web/Pages/Books.razor
   Rôle    : Page principale de gestion des livres (CRUD).
             Liste tous les livres avec recherche, modification,
             suppression et changement de disponibilité.
   ============================================================= *@

@page "/books"
@inject BookApiService BookService
@inject NavigationManager NavManager

<PageTitle>Mes Livres — Library</PageTitle>

<!-- En-tête -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 fw-bold">
        <i class="bi bi-journal-text text-primary me-2"></i>Mes Livres
    </h1>
    <a href="/books/add" class="btn btn-primary">
        <i class="bi bi-plus-circle me-2"></i>Ajouter un livre
    </a>
</div>

<!-- Barre de recherche locale -->
<div class="input-group mb-4 shadow-sm">
    <span class="input-group-text bg-white border-end-0">
        <i class="bi bi-search text-muted"></i>
    </span>
    <input type="text"
           class="form-control border-start-0 ps-0"
           placeholder="Rechercher par titre, auteur, genre, ISBN..."
           @bind="searchQuery"
           @bind:event="oninput"
           @onkeyup="OnSearchKeyUp" />
    @if (!string.IsNullOrEmpty(searchQuery))
    {
        <button class="btn btn-outline-secondary" @onclick="ClearSearch">
            <i class="bi bi-x-circle"></i>
        </button>
    }
    <button class="btn btn-primary" @onclick="Search">Rechercher</button>
</div>

<!-- Messages de retour -->
@if (!string.IsNullOrEmpty(message))
{
    <div class="alert @(isError ? "alert-danger" : "alert-success") alert-dismissible fade show">
        <i class="bi @(isError ? "bi-exclamation-triangle" : "bi-check-circle") me-2"></i>
        @message
        <button type="button" class="btn-close" @onclick="() => message = string.Empty"></button>
    </div>
}

<!-- Chargement -->
@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status"></div>
        <p class="mt-3 text-muted">Chargement des livres...</p>
    </div>
}
else if (!books.Any())
{
    <div class="text-center py-5">
        <i class="bi bi-book text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
        <h4 class="mt-3 text-muted">Aucun livre trouvé</h4>
        @if (!string.IsNullOrEmpty(searchQuery))
        {
            <p class="text-muted">Aucun résultat pour "<strong>@searchQuery</strong>".</p>
            <button class="btn btn-outline-primary" @onclick="ClearSearch">Voir tous les livres</button>
        }
        else
        {
            <p class="text-muted">Votre bibliothèque est vide.</p>
            <a href="/books/add" class="btn btn-primary">Ajouter le premier livre</a>
        }
    </div>
}
else
{
    <!-- Nombre de résultats -->
    <p class="text-muted small mb-3">
        @books.Count livre(s) trouvé(s)
        @if (!string.IsNullOrEmpty(searchQuery))
        {
            <span> pour "<strong>@searchQuery</strong>"</span>
        }
    </p>

    <!-- Liste des livres -->
    <div class="row g-3">
        @foreach (var book in books)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 border-0 shadow-sm @(book.IsAvailable ? "" : "opacity-75")">
                    <!-- Badge disponibilité -->
                    <div class="position-relative">
                        @if (!string.IsNullOrEmpty(book.CoverUrl))
                        {
                            <img src="@book.CoverUrl" class="card-img-top"
                                 style="height: 180px; object-fit: cover;"
                                 alt="Couverture de @book.Title"
                                 onerror="this.style.display='none'" />
                        }
                        <span class="badge @(book.IsAvailable ? "bg-success" : "bg-danger") position-absolute top-0 end-0 m-2">
                            @(book.IsAvailable ? "Disponible" : "Emprunté")
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-bold" style="font-size: 1rem;">@book.Title</h5>
                        <p class="card-text text-muted small mb-1">
                            <i class="bi bi-person me-1"></i>@book.Author
                        </p>
                        @if (!string.IsNullOrEmpty(book.Genre))
                        {
                            <span class="badge bg-secondary mb-2">@book.Genre</span>
                        }
                        @if (book.PublishedYear.HasValue)
                        {
                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar me-1"></i>@book.PublishedYear
                            </p>
                        }
                        @if (book.Source == "openlibrary")
                        {
                            <span class="badge bg-info text-dark mb-2">
                                <i class="bi bi-cloud me-1"></i>OpenLibrary
                            </span>
                        }

                        <!-- Boutons d'action -->
                        <div class="mt-auto pt-2 d-flex gap-2 flex-wrap">
                            <button class="btn btn-sm @(book.IsAvailable ? "btn-outline-danger" : "btn-outline-success")"
                                    @onclick="() => ToggleAvailability(book)"
                                    title="@(book.IsAvailable ? "Marquer comme emprunté" : "Marquer comme disponible")">
                                <i class="bi @(book.IsAvailable ? "bi-lock" : "bi-unlock") me-1"></i>
                                @(book.IsAvailable ? "Emprunter" : "Retourner")
                            </button>
                            <a href="/books/edit/@book.Id" class="btn btn-sm btn-outline-primary" title="Modifier">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="() => ConfirmDelete(book)"
                                    title="Supprimer">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<!-- Modal de confirmation de suppression -->
@if (bookToDelete != null)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmer la suppression
                    </h5>
                </div>
                <div class="modal-body">
                    Êtes-vous sûr de vouloir supprimer
                    <strong>"@bookToDelete.Title"</strong> ?
                    <br/><small class="text-muted">Cette action est irréversible.</small>
                </div>
                <div class="modal-footer border-0">
                    <button class="btn btn-secondary" @onclick="() => bookToDelete = null">
                        Annuler
                    </button>
                    <button class="btn btn-danger" @onclick="DeleteConfirmed">
                        <i class="bi bi-trash me-2"></i>Supprimer
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // -------------------------------------------------------
    // Variables d'état
    // -------------------------------------------------------
    private List<Book> books = new();
    private string searchQuery = string.Empty;
    private bool isLoading = true;
    private string message = string.Empty;
    private bool isError = false;
    private Book? bookToDelete = null;

    // -------------------------------------------------------
    // Chargement initial
    // -------------------------------------------------------
    protected override async Task OnInitializedAsync()
    {
        await LoadBooks();
    }

    private async Task LoadBooks()
    {
        isLoading = true;
        books = await BookService.GetAllBooksAsync();
        isLoading = false;
    }

    // -------------------------------------------------------
    // Recherche
    // -------------------------------------------------------
    private async Task Search()
    {
        isLoading = true;
        if (string.IsNullOrWhiteSpace(searchQuery))
            books = await BookService.GetAllBooksAsync();
        else
            books = await BookService.SearchBooksAsync(searchQuery);
        isLoading = false;
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter") await Search();
    }

    private async Task ClearSearch()
    {
        searchQuery = string.Empty;
        await LoadBooks();
    }

    // -------------------------------------------------------
    // Toggle disponibilité
    // -------------------------------------------------------
    private async Task ToggleAvailability(Book book)
    {
        var updated = await BookService.ToggleAvailabilityAsync(book.Id);
        if (updated != null)
        {
            var index = books.FindIndex(b => b.Id == book.Id);
            if (index >= 0) books[index] = updated;
            ShowMessage($"'{book.Title}' est maintenant {(updated.IsAvailable ? "disponible" : "emprunté")}.", false);
        }
    }

    // -------------------------------------------------------
    // Suppression
    // -------------------------------------------------------
    private void ConfirmDelete(Book book) => bookToDelete = book;

    private async Task DeleteConfirmed()
    {
        if (bookToDelete == null) return;

        var success = await BookService.DeleteBookAsync(bookToDelete.Id);
        if (success)
        {
            books.RemoveAll(b => b.Id == bookToDelete.Id);
            ShowMessage($"'{bookToDelete.Title}' a été supprimé.", false);
        }
        else
        {
            ShowMessage("Erreur lors de la suppression.", true);
        }
        bookToDelete = null;
    }

    // -------------------------------------------------------
    // Affichage des messages
    // -------------------------------------------------------
    private void ShowMessage(string msg, bool error)
    {
        message = msg;
        isError = error;
    }
}
